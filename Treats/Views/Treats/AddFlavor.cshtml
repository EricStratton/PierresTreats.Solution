@{
  Layout = "_Layout";
}

@model Treats.Models.Treat

<h2>Add a treat</h2>

<h4>Add treat to this treat: @Html.DisplayFor(model => model.Type)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select treat")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Add" />
}

<p>@Html.ActionLink("Back to treats", "Index")</p>