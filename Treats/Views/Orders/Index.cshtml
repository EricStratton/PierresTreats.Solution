@{
  Layout = "_Layout";
}

@using Treats.Models;
@model List<Treats.Models.Order>;

<h1>Orders</h1>

@if (@Model.Count == 0)
{
  <h3>No orders have been added yet!</h3>
} 

@foreach (Order order in Model)
{
  <li>@Html.ActionLink($"{order.OrderDate}", "Details", new { id = order.OrderId })</li>
}

<p>@Html.ActionLink("Place new order", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>